server {
        listen 80 default_server;
        listen [::]:80 default_server;

        server_name rpc-<chain>.examplesite.com;

        location / {
                proxy_pass http://rpc-<chain>.examplesite.com:<rpc port>/;
        server_name_in_redirect off;
        proxy_set_header Host $host;
        }
}        
